{% set trackName = track.name %}

{% for artist in track.artists %}
    {% set trackName = trackName|replace({
        (artist): '<a href="' ~ url_for('search.advanced.index', query_params = { artist }) ~ '">' ~ artist ~ '</a>'
    }) %}
{% endfor %}

<button class="switch-icon" data-role="track:play-pause" data-bs-toggle="switch-icon" style="width: 1.5em; height: 1.5em; margin-right: .55rem; opacity: 0.5">
    <span class="switch-icon-a">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5em; height: 1.5em" class="align-top" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
            <path d="M6.271 5.055a.5.5 0 0 1 .52.038l3.5 2.5a.5.5 0 0 1 0 .814l-3.5 2.5A.5.5 0 0 1 6 10.5v-5a.5.5 0 0 1 .271-.445z"></path>
        </svg>
    </span>
    <span class="switch-icon-b">
        <svg xmlns="http://www.w3.org/2000/svg" style="width: 1.5em; height: 1.5em" class="align-top" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path d="M5 6.25a1.25 1.25 0 1 1 2.5 0v3.5a1.25 1.25 0 1 1-2.5 0v-3.5zm3.5 0a1.25 1.25 0 1 1 2.5 0v3.5a1.25 1.25 0 1 1-2.5 0v-3.5z"/>
        </svg>
    </span>
</button>

<span>
    {{ trackName|raw }}
</span>
